{
    "overrides": [
    {
      // JavaScript and JSX
      "files": ["*.{js,jsx}"],
      "parserOptions": {
        "sourceType": "module"
      },
      "extends": ["airbnb", "airbnb/hooks", "prettier",
        "prettier/react"],
      "plugins": ["prettier"]
    },
    {
      // Typescript and TSX
      // See https://github.com/toshi-toma/eslint-config-airbnb-typescript-prettier/blob/master/index.js
      "files": ["*.{jsx,ts,tsx}"],
      "extends": ["airbnb-typescript-prettier"]
    }
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100,
          "ignoreUrls": true
  
        }
      ],
      "react/jsx-filename-extension": [ "warn", {"extensions": [".tsx"]} ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  }